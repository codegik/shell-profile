#!/bin/bash

OS=$(uname -s)

if [ -f ~/.bash_git ]; then
	. ~/.bash_git
fi

# functions
function mvnSettings {
  if [ "$#" -gt 0 ]; then
    echo "coping settings-$1.xml"
    cp ~/.m2/settings-$1.xml ~/.m2/settings.xml
  else
    echo "removing settings.xml"
    rm -rf ~/.m2/settings.xml
  fi
  echo "Done"
}


# some more ls aliases
if [ "$OS" == "Linux" ]; then
	alias ls='ls -h --color'
else
	alias ls='ls -h -G'
fi

alias l='ls -l'
alias ll='ls -la'
alias ..='cd ..'
alias c='clear'
alias h='history'
alias du='du -h'
alias df='df -h'
alias grep='grep --color'
alias egrep='egrep --color'
alias fgrep='fgrep --color'
alias javaDebug='java -Xdebug -Xrunjdwp:server=y,transport=dt_socket,address=8000,suspend=n'
alias dockerStopAll='docker stop $(docker ps -a -q)'
alias dockerRemoveAll='docker rm $(docker ps -a -q)'

# COLORS
Color_Off="\[\033[0m\]"       # Text Reset
Black="\[\033[0;30m\]"        # Black
Red="\[\033[0;31m\]"          # Red
Green="\[\033[0;32m\]"        # Green
Yellow="\[\033[0;33m\]"       # Yellow
Blue="\[\033[0;34m\]"         # Blue
Purple="\[\033[0;35m\]"       # Purple
Cyan="\[\033[0;36m\]"         # Cyan
White="\[\033[0;37m\]"        # White
BYellow="\[\033[1;33m\]"      # Bold Yellow

# Dir color for linux
export LS_COLORS=$LS_COLORS:'di=01;36:'
# Dir color for osx
export CLICOLOR=1
export LSCOLORS=ExFxCxDxBxegedabagacad

export PS1="${Cyan}\u${Color_Off}@${Green}\h${Color_Off}:${BYellow}\w${Color_Off}\$(__git_ps1 \" ${Red}#%s${Color_Off}\")\$ "

